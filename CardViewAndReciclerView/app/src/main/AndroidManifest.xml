<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cardviewandreciclerview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".CardReciclerViewActivity"
            android:parentActivityName=".CardActivity"></activity>
        <activity
            android:name=".CardViewActivity"
            android:parentActivityName=".CardActivity" />
        <activity
            android:name=".CardActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ReciclerGridActivity"
            android:label="ReciclerGridActivity"
            android:parentActivityName=".ReciclerActivity" />
        <activity
            android:name=".ReciclerListActivity"
            android:label="ReciclerListActivity"
            android:parentActivityName=".ReciclerActivity" />
        <activity
            android:name=".ReciclerActivity"
            android:label="ReciclerActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:label="ReciclerViewsByDrohne">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>